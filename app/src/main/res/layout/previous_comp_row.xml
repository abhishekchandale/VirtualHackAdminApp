<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txt_card_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Name"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_card_comp_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txt_card_username"
                android:layout_marginTop="20dp"
                android:text="ComplaitDate"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_card_comp_message"
                android:layout_marginTop="20dp"
                android:text="Date"
                android:textColor="#000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_card"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/txt_card_comp_message"
                android:layout_toRightOf="@+id/txt_card_comp_message"
                android:src="@drawable/take_pic" />

            <Button
                android:id="@+id/txt_send_response"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:text="response"
                android:textSize="5sp" />

            <Button
                android:id="@+id/card_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="Map"
                android:onClick="showMap"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>